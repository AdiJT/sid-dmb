@model List<UnitUsaha>

@{
    ViewData["Title"] = "Unit Usaha";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Preneur</a></li>
                        <li class="breadcrumb-item active">Unit Usaha</li>
                    </ol>
                </div>
                <h4 class="page-title">Unit Usaha</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <!-- start row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Daftar Unit Usaha</h4>
                    <div class="pb-3 pt-1">
                        <a asp-area="Dashboard" asp-controller="UnitUsaha" asp-action="Tambah" class="btn btn-primary">+ Tambah</a>
                    </div>
                    <table id="alternative-page-datatable" class="table dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID Unit Usaha</th>
                                <th>Nama Unit Usaha</th>
                                <th>Deskripsi Unit Usaha</th>
                                <th>Kategori Unit Usaha</th>
                                <th>Alamat/Lokasi</th>
                                <th>Koordinat Lokasi</th>
                                <th>Pemilik Usaha</th>
                                <th>Jumlah Karyawan</th>
                                <th>Produk/Jasa yang Ditawarkan</th>
                                <th>Legalitas Usaha</th>
                                <th>Tanggal Berdiri</th>
                                <th>Kontak Informasi</th>
                                <th>Media Promosi</th>
                                <th>Tanggal Input</th>
                                <th>Tanggal Pembaruan</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var unitUsaha in Model)
                            {
                                <tr>
                                    <td>@unitUsaha.Id.Value</td>
                                    <td>@unitUsaha.Nama</td>
                                    <td class="text-wrap" style="min-width: 500px">@unitUsaha.Dekripsi</td>
                                    <td>@unitUsaha.Kategori.Humanize()</td>
                                    <td>@unitUsaha.Alamat</td>
                                    <td>@unitUsaha.TitikKoordinat.Y.ToString("F3"), @unitUsaha.TitikKoordinat.X.ToString("F3")</td>
                                    <td>@unitUsaha.PemilikUsaha</td>
                                    <td>@unitUsaha.JumlahKaryawan</td>
                                    <td>@string.Join(", ", unitUsaha.DaftarProduk.Select(p => p.Nama))</td>
                                    <td>@unitUsaha.Legalitas.Humanize()</td>
                                    <td>@unitUsaha.TanggalBerdiri.ToString("yyyy-MM-dd")</td>
                                    <td>@unitUsaha.KontakInformasi</td>
                                    <td>
                                        <a href="@unitUsaha.MediaPromosi">@unitUsaha.MediaPromosi</a>
                                    </td>
                                    <td>@unitUsaha.TanggalDiinputkan.ToString("yyyy-MM-dd")</td>
                                    <td>@unitUsaha.TanggalPembaruanData.ToString("yyyy-MM-dd")</td>
                                    <td class="table-action">
                                        <a asp-area="Dashboard" asp-controller="UnitUsaha" asp-action="Edit" asp-route-id="@unitUsaha.Id.Value" class="action-icon" data-bs-toggle="tooltip" title="Edit"> <i class="mdi mdi-pencil"></i></a>
                                        <button type="button" class="action-icon" data-bs-toggle="modal" data-bs-target="#basicModal2"
                                                data-url="@Url.Action("Hapus", new { id = unitUsaha.Id.Value })"
                                                title="Hapus">
                                            <i class="mdi mdi-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>