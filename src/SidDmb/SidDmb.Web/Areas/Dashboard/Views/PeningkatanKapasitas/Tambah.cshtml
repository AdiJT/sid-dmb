                            </form>
                        </div> <!-- end col -->

                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="simpleinput" class="form-label">Fasilitator<span class="text-danger">*</span></label>
                                <input type="text" id="simpleinput" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label for="example-textarea" class="form-label">Materi Pelatihan<span class="text-danger">*</span></label>
                                <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="example-textarea" class="form-label">Evaluasi Peserta<span class="text-danger">*</span></label>
                                <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="example-fileinput" class="form-label">Dokumen dan Media<span class="text-danger">*</span></label>
                                <input type="file" id="example-fileinput" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label for="example-textarea" class="form-label">Feedback dari Peserta<span class="text-danger">*</span></label>
                                <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Kolaborator Pelatihan<span class="text-danger">*</span></label>
                                <select class="select2 form-control select2-multiple" data-toggle="select2" multiple="multiple" data-placeholder="Choose ...">
                                    <option value="A">Akademisi</option>
                                    <option value="B">Dinas Pariwisata</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="example-textarea" class="form-label">Rekomendasi untuk Pelatihan Berikutnya<span class="text-danger">*</span></label>
                                <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                            </div>

                            <div class="d-flex justify-content-end align-items-end mt-2 mb-3">
                                <button type="submit" class="btn btn-primary" style="margin-right: 5px">Tambah Kapasitas</button>
                                <button type="reset" class="btn btn-danger">Batal</button>
                            </div>


