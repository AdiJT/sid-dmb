@model TambahVM

@{
    ViewData["Title"] = "Destinasi Wisata | Tambah";
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Wisata</a></li>
                        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="DestinasiWisata" asp-action="Index">Destinasi Wisata</a></li>
                        <li class="breadcrumb-item active">Tambah</li>
                    </ol>
                </div>
                @* <h4 class="page-title">Tambah</h4> *@
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Tambah Destinasi Wisata</h4>
                    <form>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Nama Destinasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="example-textarea" class="form-label">Deskripsi<span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Kategori Destinasi<span class="text-danger">*</span></label>
                                    <select class="form-control select2" data-toggle="select2">
                                        <option value="A">Alam</option>
                                        <option value="B">Sejarah</option>
                                        <option value="C">Budaya</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="example-textarea" class="form-label">Alamat/Lokasi<span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="example-textarea" rows="3"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Koordina Lokasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control" placeholder="Contoh : -7.915, 110.333">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Fasilitas<span class="text-danger">*</span></label>
                                    <select class="select2 form-control select2-multiple" data-toggle="select2" multiple="multiple" data-placeholder="Choose ...">
                                        <option value="A">Toilet</option>
                                        <option value="B">Warung</option>
                                        <option value="C">Parkir</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Harga Tiket Masuk (Rp.)<span class="text-danger">*</span></label>
                                    <input type="number" id="simpleinput" class="form-control">
                                </div>
                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Jam Operasional<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Kontak Informasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="example-fileinput" class="form-label">Foto/Gambar<span class="text-danger">*</span></label>
                                    <input type="file" id="example-fileinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Rating dari Pengunjung<span class="text-danger">*</span></label>
                                    <input type="number" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Pengelola Destinasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Jenis Aktifitas<span class="text-danger">*</span></label>
                                    <select class="select2 form-control select2-multiple" data-toggle="select2" multiple="multiple" data-placeholder="Choose ...">
                                        <option value="A">Snorkeling</option>
                                        <option value="B">Berkemah</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Status Operasional<span class="text-danger">*</span></label>
                                    <select class="form-control select2" data-toggle="select2">
                                        <option value="A">Buka</option>
                                        <option value="B">Tutup Sementara</option>
                                        <option value="C">Ditutup</option>
                                    </select>
                                </div>

                                <div class="d-flex justify-content-end align-items-end mt-2 mb-3">
                                    <button type="submit" class="btn btn-primary" style="margin-right: 5px">Tambah Destinasi</button>
                                    <button type="reset" class="btn btn-danger">Batal</button>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </form>

                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->


</div>


