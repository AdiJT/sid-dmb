@model List<LaporanEvent>

@{
    ViewData["Title"] = "Pelaporan & Dokumentasi Event | Manajemen Event";
    var cultureInfo = new CultureInfo("id-ID");
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Manajemen Event</a></li>
                        <li class="breadcrumb-item active">Pelaporan & Dokumentasi Event</li>
                    </ol>
                </div>
                <h4 class="page-title">Pelaporan & Dokumentasi Event</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <!-- start row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-3">Daftar Pelaporan & Dokumentasi Event</h4>
                    <table id="alternative-page-datatable" class="table dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID Laporan Event</th>
                                <th>ID Event</th>
                                <th>Nama Event</th>
                                <th>Tanggal Pelaporan</th>
                                <th>Jumlah Peserta</th>
                                <th>Pendapatan dari Event</th>
                                <th>Pengeluaran Event</th>
                                <th>Ulasan Singkat Event</th>
                                <th>Feedback dari Peserta</th>
                                <th>Foto/Gambar Dokumentasi</th>
                                <th>Video Dokumentasi</th>
                                <th>Kolaborator dalam Event</th>
                                <th>Laporan Detail</th>
                                <th>Masukan Kolaborator</th>
                                <th>Rekomendasi untuk Event Berikutnya</th>
                                <th>Tanggal Input</th>
                                <th>Tanggal Pembaruan</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var laporanEvent in Model)
                            {
                                <tr>
                                    <td>@laporanEvent.Id.Value</td>
                                    <td>@laporanEvent.Event.Id.Value</td>
                                    <td>@laporanEvent.Event.Nama</td>
                                    <td>@laporanEvent.TanggalPelaporan.ToString("yyyy-MM-dd")</td>
                                    <td>@laporanEvent.JumlahPeserta</td>
                                    <td>@laporanEvent.PendapatanEvent.ToString("C2", cultureInfo)</td>
                                    <td>@laporanEvent.PengeluaranEvent.ToString("C2", cultureInfo)</td>
                                    <td>@laporanEvent.UlasanSingkatEvent</td>
                                    <td>@laporanEvent.FeedbackPeserta</td>
                                    <td>
                                        <a href="@laporanEvent.FotoDokumentasi">@laporanEvent.FotoDokumentasi</a>
                                    </td>
                                    <td>
                                        <a href="@laporanEvent.VideoDokumentasi">@laporanEvent.VideoDokumentasi</a>
                                    </td>
                                    <td>@string.Join(", ", laporanEvent.Event.DaftarKolaborator.Select(x => x.Nama))</td>
                                    <td>
                                        <a href="@laporanEvent.LaporanDetail">@laporanEvent.LaporanDetail</a>
                                    </td>
                                    <td>@string.Join(", ", laporanEvent.Event.DaftarKolaboratorEvent.Select(x => x.MasukanKolaborator))</td>
                                    <td>@string.Join(", ", laporanEvent.Event.DaftarKolaboratorEvent.Select(x => x.RekomedasiEventBerikutnya))</td>
                                    <td>@laporanEvent.TanggalDiinputkan.ToString("yyyy-MM-dd")</td>
                                    <td>@laporanEvent.TanggalPembaruanData.ToString("yyyy-MM-dd")</td>
                                    <td class="table-action">
                                        <a asp-area="Dashboard" asp-controller="ManajemenEvent" asp-action="PelaporanDanDokumentasiDetail"
                                           asp-route-id="@laporanEvent.Id.Value" class="action-icon" data-bs-toggle="tooltip" title="Edit"> <i class="mdi mdi-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>