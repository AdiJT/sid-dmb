<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Produk & Inventory</a></li>
                        <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="ProdukInventory" asp-action="Sertifikasi">Sertifikasi & Legalitas</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
                @* <h4 class="page-title">Tambah</h4> *@
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Edit Sertifikasi & Legalitas</h4>
                    <form>
                        <div class="row">
                            <div class="mb-3">
                                <label for="example-textarea" class="form-label" style="font-weight: bold;">Komentar/Kebutuhan Tambahan<span class="text-danger">*</span></label>
                                <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                            </div>

                            <div class="col-lg-6">

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Nama Produk (Relasi)<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Jenis Sertifikasi<span class="text-danger">*</span></label>
                                    <select class="form-control select2" data-toggle="select2">
                                        <option value="A">PIRT</option>
                                        <option value="B">BPOM</option>
                                        <option value="C">Halal</option>
                                        <option value="D">ISO</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Nomor Sertifikasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control" autofocus>
                                </div>

                                <div class="mb-3">
                                    <label for="example-date" class="form-label">Tanggal Penerbitan<span class="text-danger">*</span></label>
                                    <input class="form-control" id="example-date" type="date" name="date">
                                </div>

                                <div class="mb-3">
                                    <label for="example-date" class="form-label">Tanggal Kadaluarsa<span class="text-danger">*</span></label>
                                    <input class="form-control" id="example-date" type="date" name="date">
                                </div>

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Pemberi Sertifikasi<span class="text-danger">*</span></label>
                                    <input type="text" id="simpleinput" class="form-control" autofocus>
                                </div>

                            </div> <!-- end col -->

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label for="example-fileinput" class="form-label">Dokumen Sertifikasi<span class="text-danger">*</span></label>
                                    <input type="file" id="example-fileinput" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label for="example-textarea" class="form-label">Proses yang Dilalui<span class="text-danger">*</span></label>
                                    <textarea class="form-control" id="example-textarea" rows="5"></textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Status Sertifikasi<span class="text-danger">*</span></label>
                                    <select class="form-control select2" data-toggle="select2">
                                        <option value="A">Diproses</option>
                                        <option value="B">Aktif</option>
                                        <option value="C">Kadaluarsa</option>
                                    </select>
                                </div>                               

                                <div class="mb-3">
                                    <label class="form-label">Pihak Kolaborator<span class="text-danger">*</span></label>
                                    <select class="select2 form-control select2-multiple" data-toggle="select2" multiple="multiple" data-placeholder="Choose ...">
                                        <option value="A">BPOM</option>
                                        <option value="B">Akademisi</option>
                                        <option value="C">Asosiasi Pariwisata</option>
                                    </select>
                                </div>

                                <div class="d-flex justify-content-end align-items-end mt-2 mb-3">
                                    <button type="submit" class="btn btn-primary" style="margin-right: 5px">Simpan</button>
                                    <button type="reset" class="btn btn-danger">Batal</button>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                    </form>
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row-->


</div>



