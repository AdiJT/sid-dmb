@model List<Rekomendasi>

@{
    ViewData["Title"] = "Rekomendasi & Pengembangan Produk | Research & Development";
    var cultureInfo = new CultureInfo("id-ID");
}

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Research & Development</a></li>
                        <li class="breadcrumb-item active">Rekomendasi & Pengembangan Produk</li>
                    </ol>
                </div>
                <h4 class="page-title">Rekomendasi & Pengembangan Produk</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <!-- start row -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-3">Daftar Rekomendasi & Pengembangan Produk</h4>
                    <table id="alternative-page-datatable" class="table dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID Rekomendasi</th>
                                <th>Judul Rekomendasi</th>
                                <th>Deskripsi Rekomendasi</th>
                                <th>ID Produk Terkait</th>
                                <th>Nama Produk</th>
                                <th>Tujuan Pengembangan</th>
                                <th>Pemberi Rekomendasi</th>
                                <th>Kategori Pengembangan</th>
                                <th>Strategi yang Direkomendasikan</th>
                                <th>Timeline Implementasi</th>
                                <th>Anggaran yang Dibutuhkan</th>
                                <th>Hasil yang Diharapkan</th>
                                <th>Kolaborator dalam Pengembangan</th>
                                <th>Status Implementasi</th>
                                <th>Feedback dari Kolaborator</th>
                                <th>Dokumen Pendukung</th>
                                <th>Tanggal Input Data</th>
                                <th>Tanggal Pembaruan Data</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var rekomendasi in Model)
                            {
                                <tr>
                                    <td>@rekomendasi.Id.Value</td>
                                    <td>@rekomendasi.Judul</td>
                                    <td>@rekomendasi.Dekripsi</td>
                                    <td>@rekomendasi.ProdukTerkait.Id.Value</td>
                                    <td>@rekomendasi.ProdukTerkait.Nama</td>
                                    <td>@rekomendasi.TujuanPengembangan</td>
                                    <td>@rekomendasi.PemberiRekomendasi</td>
                                    <td>@rekomendasi.KategoriPengembangan.Humanize()</td>
                                    <td>@rekomendasi.StrategiYangDirekomendasikan</td>
                                    <td>@rekomendasi.TimelineRekomendasi</td>
                                    <td>@rekomendasi.Anggaran.ToString("C2", cultureInfo)</td>
                                    <td>@rekomendasi.HasilYangDiharapkan</td>
                                    <td>@string.Join(", ", rekomendasi.DaftarKolaborator.Select(x => x.Nama))</td>
                                    <td>@rekomendasi.StatusImplementasi.Humanize()</td>
                                    <td>@string.Join(", ", rekomendasi.DaftarKolaboratorRekomendasi.Select(x => x.FeedbackKolaborator))</td>
                                    <td>
                                        <a href="@rekomendasi.DokumenPendukung">@rekomendasi.DokumenPendukung</a>
                                    </td>
                                    <td>@rekomendasi.TanggalDiinputkan.ToString("yyyy-MM-dd")</td>
                                    <td>@rekomendasi.TanggalPembaruanData.ToString("yyyy-MM-dd")</td>
                                    <td class="table-action">
                                        <a asp-area="Dashboard" asp-controller="ResearchAndDevelopment" asp-action="RekomendasiDanPengembanganProdukDetail"
                                           asp-route-id="@rekomendasi.Id.Value" class="action-icon" data-bs-toggle="tooltip" title="Edit"> <i class="mdi mdi-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->
</div>