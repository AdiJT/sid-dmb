                                    <option value="B">Akademisi</option>
                                    <option value="C">Asosiasi Pariwisata</option>
                                </select>
                            </div>

                            <div class="d-flex justify-content-end align-items-end mt-2 mb-3">
                                <button type="submit" class="btn btn-primary" style="margin-right: 5px">Tambah Sertifikasi</button>
