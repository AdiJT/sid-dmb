                                    <option value="B">Akademisi</option>
                                    <option value="C">Asosiasi Pariwisata</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="example-fileinput" class="form-label">Media Promosi<span class="text-danger">*</span></label>
                                <input type="file" id="example-fileinput" class="form-control">
                            </div>

                            <div class="d-flex justify-content-end align-items-end mt-2 mb-3">
                                <button type="submit" class="btn btn-primary" style="margin-right: 5px">Tambah Event</button>
