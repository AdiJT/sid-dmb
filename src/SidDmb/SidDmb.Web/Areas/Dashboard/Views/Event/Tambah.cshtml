                                        <option value="B">Olahraga</option>
                                        <option value="C">Edukasi</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="example-date" class="form-label">Tanggal dan Waktu<span class="text-danger">*</span></label>
