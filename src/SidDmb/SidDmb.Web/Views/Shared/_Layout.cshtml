<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SidDmb.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SidDmb.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="_NavbarPartial"></partial>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--======================================================= FOOTER =======================================================-->
    <footer class="footer" id="contact">
        <div class="section__container footer__container">
            <div class="footer__col">
                <div class="logo">
                    <a href="#"><h3>WebSID</h3></a>
                </div>
                <p class="section__description">
                    Melalui Sistem Informasi Desa ini, kami memudahkan Anda mengakses potensi dan layanan desa secara cepat dan praktis.
                </p>
                <a asp-area="" asp-controller="Hotel" asp-action="Pemetaan" class="btn">Lihat Pemetaan</a>
            </div>
            <div class="footer__col jarak_footer">
                <h4>LINK CEPAT</h4>
                <ul class="footer__links">
                    <li><a asp-area="" asp-controller="" asp-action="">Home</a></li>
                    <li><a asp-area="" asp-controller="" asp-action="">Atraksi</a></li>
                    <li><a asp-area="" asp-controller="" asp-action="">Event</a></li>
                    <li><a asp-area="" asp-controller="" asp-action="">Laporan</a></li>
                    @* <li><a asp-area="" asp-controller="Home" asp-action="Kontak">Kontak</a></li> *@
                </ul>
            </div>
            <div class="footer__col jarak__footer">
                <h4>LAYANAN KAMI</h4>
                <ul class="footer__links">
                    <li><a href="#">Destinasi Wisata</a></li>
                    <li><a href="#">Artefak Budaya</a></li>
                    <li><a href="#">Situs Budaya</a></li>
                    <li><a href="#">Produk Khas</a></li>
                </ul>
            </div>
            <div class="footer__col">
                <h4>KONTAK KAMI</h4>
                <ul class="footer__links">
                    <li><a href="#">websid@info.com</a></li>
                </ul>
                <div class="footer__socials">
                    <a href="#"><img src="~/assets/facebook.png" alt="facebook" /></a>
                    <a href="#"><img src="~/assets/instagram.png" alt="instagram" /></a>
                    <a href="#"><img src="~/assets/youtube.png" alt="youtube" /></a>
                    <a href="#"><img src="~/assets/twitter.png" alt="twitter" /></a>
                </div>
            </div>
        </div>
        <div class="footer__bar">
            Copyright © 2024 WebSID. All rights reserved.
        </div>
    </footer>
    <!--======================================================= AKHIR FOOTER =======================================================-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
