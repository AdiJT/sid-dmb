@using SidDmb.Domain.MasterDataFunction.ModulWisata.DestinasiWisatas

@model List<DestinasiWisata>

@{
    ViewData["Title"] = "Atraksi Wisata | Destinasi Wisata";
}

<header class="header">
    <div class="section__container header__container" id="home">
        <h1>Destinasi Wisata</h1>
    </div>
</header>

<section class="breadcumbs__container ">
    <nav class="breadcrumbs">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a asp-area="" asp-controller="Atraksi" asp-action="Index">Atraksi Wisata</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a href="">Destinasi Wisata</a></li>
        </ul>
    </nav>
</section>

<section class="section__container destinasi__container">
    <p class="section__subheader">Panduan Wisata</p>
    <h2 class="section__header">Destinasi Wisata</h2>
    <div class="card-gallery">
        @foreach (var destinasi in Model)
        {
            <div class="cardku">
                <img src="@destinasi.Foto" alt="Image 1">
                <div class="card-content">
                    <div class="category">Destinasi @destinasi.Kategori.Humanize()</div>
                    <h3 class="title">@destinasi.Nama</h3>
                    <p class="description">@destinasi.Deskripsi</p>
                    <a asp-area="" asp-controller="Atraksi" asp-action="DetailDestinasi" asp-route-id="@destinasi.Id.Value" class="read-more">Lihat Lebih Lanjut</a>
                </div>
            </div>
        }
    </div>
</section>