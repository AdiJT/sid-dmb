@using SidDmb.Domain.MasterDataFunction.ModulBudaya.UpacaraBudayas
@model List<UpacaraBudaya>

@{
    ViewData["Title"] = "Upacara Budaya | Atraksi Wisata";
}

<header class="header">
    <div class="section__container header__container" id="home">
        <h1>Upacara Budaya</h1>
    </div>
</header>

<section class="breadcumbs__container ">
    <nav class="breadcrumbs">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a asp-area="" asp-controller="Atraksi" asp-action="Index">Atraksi Wisata</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a href="">Upacara Budaya</a></li>
        </ul>
    </nav>
</section>

<section class="section__container upacara__container">
    <p class="section__subheader">Tradisi dan Upacara Desa</p>
    <h2 class="section__header">Upacara Budaya</h2>
    <div class="card-gallery">
        @foreach (var upacara in Model)
        {
            <div class="cardku">
                <img src="@upacara.MediaPromosi" alt="Image 1">
                <div class="card-content">
                    <div class="category">Upacara @upacara.Kategori.Humanize()</div>
                    <h3 class="title">@upacara.Nama</h3>
                    <p class="description">@upacara.Dekripsi</p>
                    <a asp-area="" asp-controller="Atraksi" asp-action="DetailUpacara" asp-route-id="@upacara.Id.Value" class="read-more">Lihat Lebih Lanjut</a>
                </div>
            </div>
        }
    </div>
</section>