@using SidDmb.Domain.MasterDataFunction.ModulBudaya.SeniBudayas
@model List<SeniBudaya>

@{
    ViewData["Title"] = "Seni Budaya";
}

<header class="header">
    <div class="section__container header__container" id="home">
        <h1>Seni Budaya</h1>
    </div>
</header>

<section class="breadcumbs__container ">
    <nav class="breadcrumbs">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a asp-area="" asp-controller="Atraksi" asp-action="Index">Atraksi Wisata</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a href="">Seni Budaya</a></li>
        </ul>
    </nav>
</section>

<section class="section__container seni__container">
    <p class="section__subheader">Keindahan Tradisi</p>
    <h2 class="section__header">Seni Budaya</h2>
    <div class="card-gallery">
        @foreach (var seni in Model)
        {
            <div class="cardku">
                <img src="@seni.MediaPromosi" alt="Image 1">
                <div class="card-content">
                    <div class="category">Seni @seni.Kategori.Humanize()</div>
                    <h3 class="title">@seni.Nama</h3>
                    <p class="description">@seni.Dekripsi</p>
                    <a asp-area="" asp-controller="Atraksi" asp-action="DetailSeni" asp-route-id="@seni.Id.Value" class="read-more">Lihat Lebih Lanjut</a>
                </div>
            </div>
        }
    </div>
</section>