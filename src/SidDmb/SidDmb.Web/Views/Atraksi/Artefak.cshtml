@using SidDmb.Domain.MasterDataFunction.ModulBudaya.ArtefakBudayas
@model List<ArtefakBudaya>

@{
    ViewData["Title"] = "Artefak Budaya";
}

<header class="header">
    <div class="section__container header__container" id="home">
        <h1>Artefak Budaya</h1>
    </div>
</header>

<section class="breadcumbs__container ">
    <nav class="breadcrumbs">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a asp-area="" asp-controller="Atraksi" asp-action="Index">Atraksi Wisata</a></li>
            <li><i class="ri-arrow-right-s-line"></i></li>
            <li><a href="">Artefak Budaya</a></li>
        </ul>
    </nav>
</section>

<section class="section__container artefak__container">
    <p class="section__subheader">Warisan Lokal</p>
    <h2 class="section__header">Artefak Budaya</h2>
    <div class="card-gallery">
        @foreach (var artefak in Model)
        {
            <div class="cardku">
                <img src="@artefak.Foto" alt="Image 1">
                <div class="card-content">
                    <div class="category">Artefak @artefak.Kategori.Humanize()</div>
                    <h3 class="title">@artefak.Nama</h3>
                    <p class="description">@artefak.Dekripsi</p>
                    <a asp-area="" asp-controller="Atraksi" asp-action="DetailArtefak" asp-route-id="@artefak.Id.Value" class="read-more">Lihat Lebih Lanjut</a>
                </div>
            </div>
        }
    </div>
</section>